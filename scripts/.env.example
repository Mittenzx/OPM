# OPM Forum Engagement Bot - Environment Variables
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# Reddit API Credentials
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=OPM Bot v1.0 by /u/your_username

# Discord Bot Token
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Twitter/X API Credentials
# Get from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Epic Forums (Manual - no API)
EPIC_USERNAME=your_epic_username
EPIC_PASSWORD=your_epic_password

# GitHub Token (for analytics)
GITHUB_TOKEN=your_github_personal_access_token

# Webhook URLs (optional, for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Bot Configuration
BOT_ENVIRONMENT=development
BOT_DEBUG=true
